#include <iostream>
#include <ctime>
using namespace std;

int main()
{
	srand((unsigned)time(NULL));
	setlocale(LC_ALL, "Russian");
	int length, max, min, maxindex = 0, minindex = 0;
	cin >> length;
	int* array = new int[length];
	for (int i = 0; i < length; i++)
	{
		array[i] = rand() % 50 + 51;
		cout << " array[" << i << "]  = " << array[i] << endl;
	}
	max = array[0];
	for (int i = 0; i < length; i++)
	{
		if (array[i] > max)
		{
			max = array[i];
			maxindex = i;
		}
	}
	min = array[0];
	for (int i = 0; i < length; i++)
	{
		if (array[i] < min)
		{
			min = array[i];
			minindex = i;
		}
	}
	int buf;
	if (minindex > maxindex)
	{
		buf = minindex;
		minindex = maxindex;
		maxindex = buf;
	}
	for (int i = minindex + 1; i < maxindex; i++)
	{
		array[i] = 0;
	}
	cout << " " << endl;
	for (int i = 0; i < length; i++)
		cout << " array[" << i << "]  = " << array[i] << endl;
}
