#include <iostream>
#include <ctime>
using namespace std;

int main()
{
	srand((unsigned)time(NULL));
	setlocale(LC_ALL, "Russian");
	int length, k = 0, f = 1;
	cin >> length;
	int* array = new int[length];
	for (int i = 0; i < length; i++)
	{
		array[i] = rand() % 50 + 51;
		cout << " array[" << i << "]  = " << array[i] << endl;
	}
	for (int i = 0; i < length; i++)
		if (i < length / 2)
		{
			cout << " array[" << f << "]  = " << array[f] << endl;
			f = f + 2;
		}
		else
		{
			cout << " array[" << length - 2 - k << "]  = " << array[length - 2 - k] << endl;
			k = k + 2;
		}
}
