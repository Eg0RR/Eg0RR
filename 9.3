using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int N = -1, X, firstDay = -1;
    while (firstDay < 1 || firstDay > 7)
    {

        cout << " Введите первый день недели (1-пон, 2-вт... 6-суббота,7-воскресенье)" << endl;
        cin >> firstDay;
    }
    firstDay = firstDay % 7;
    while (N < 1 || N > 365)
    {

        cout << " Введите число " << endl;
        cin >> N;
    }
    X = ( N + firstDay - 1 ) % 7;
    if (X == 0)
        X = X + 7;
    cout << X << endl;

}
