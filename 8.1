using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    float file;
    int fileKB;
    cout << " Введите размер файла в байтах ";
    cin >> file;
    fileKB = file;
    cout << file / 1024.0 << endl;
    cout << fileKB / 1024 << endl;
    cout << file / 1024.0 - fileKB / 1024 << endl;
    if ((file / 1024.0 - fileKB / 1024) > 0)
    {
        fileKB = file / 1024;

        fileKB++;
    }
    else 
        fileKB = file / 1024;
    cout << " размер файла в килобайтах " << fileKB << endl;
}
